+#!/usr/bin/env bash
+set -euo pipefail
+
+ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
+OUTPUT_ZIP="${1:-$ROOT_DIR/Bookieverse-upload.zip}"
+
+cd "$ROOT_DIR"
+
+zip -r "$OUTPUT_ZIP" . \
+  -x ".git/*" \
+     "__pycache__/*" \
+     "*.pyc" \
+     "*.pyo" \
+     ".pytest_cache/*" \
+     ".venv/*" \
+     "venv/*"
+
+echo "Created: $OUTPUT_ZIP"
